int countWords(String s) {
    int count = 0;
    boolean inWord = false;

    for (int i = 0; i < s.length(); i++) {
        char ch = s.charAt(i);

        if (ch != ' ' && !inWord) {
            count++;
            inWord = true;
        }
        else if (ch == ' ') {
            inWord = false;
        }
    }
    return count;
}
